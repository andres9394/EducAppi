<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.andre.educappi.Controlador.ModificarInformacionAlumno">

    <TextView
        android:id="@+id/txtvTituloMIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Editando información del alumno con C.U.R.P:"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etTelefonoMIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtvTituloMIA"
        android:layout_alignStart="@+id/txtvTituloMIA"
        android:layout_below="@+id/txtvTituloMIA"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etCorreoMIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etTelefonoMIA"
        android:layout_alignStart="@+id/etTelefonoMIA"
        android:layout_below="@+id/etTelefonoMIA"
        android:ems="10"
        android:hint="Correo de los padres"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etMatriculaMIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etCorreoMIA"
        android:layout_alignStart="@+id/etCorreoMIA"
        android:layout_below="@+id/etCorreoMIA"
        android:ems="10"
        android:hint="Matricula"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnMIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="modificarAlumno"
        android:text="Guardar cambios" />
</RelativeLayout>
